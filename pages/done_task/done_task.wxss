
.xin{
  padding:0 20rpx;
  width:100%;
  height:100%;
}

.xin .border{
  height: 0;
  border-top: 1px solid #ccc;
  margin-top: 10rpx;
  width:80%;
}
.xin-list{
  height:90%;
  width: 95%;
  position: relative;
}
.xin-list .single{
  transition: all 1s;
  overflow: hidden;
  border-radius: 1rpx;
  margin-top:15rpx;
  width: calc(100% - 20rpx);
  height: calc(100vh - 50rpx - 11vh);
  background: #fff;
  position: absolute;
  box-shadow: 3rpx 3rpx 10rpx 0rpx #777;
  border-radius: 10rpx;
}
.title{
  font-style: normal;
  font-size: 60rpx;
  font-weight: bold;
}
.mainbody{
  line-height: 100rpx;
}
.body{
  font-style: normal;
  font-size: 30rpx;
  font-weight: bold;
}

.th-text {
  font-style: normal;
  font-size: 30rpx;
  color: rgb(119, 118, 118);
  display: block;
  height: 40rpx;
  max-height: 50rpx;
  line-height: 35rpx;
}
.th-text-special {
  font-style: normal;
  font-size: 30rpx;
  color: rgb(119, 118, 118);
  display: block;
  height: 120rpx;
  max-height: 120rpx;
  line-height: 35rpx;
}

.xin-xie{
  clear: both;
  font-size: 30rpx;
  position: absolute;
  right: 30rpx;
  bottom: 20rpx;
}
.img{
  position: fixed;
  bottom: 0;
  width:100%;
  height:10%;


}
.theimage{
  width: 40rpx;
  height: 40rpx;

}